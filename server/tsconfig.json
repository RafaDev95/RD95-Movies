{
    "compilerOptions": {
      "outDir": "dist", 
      "rootDir": "src", 
      "target": "es2021", 
      "sourceMap": true, 
      "skipLibCheck":true, 
      "forceConsistentCasingInFileNames": true, 
      "module": "commonjs", 
      "types": ["node"],
      "moduleResolution": "node",
      "esModuleInterop": true, 
      "strict": true,
      "baseUrl": "src",
      "paths":{
        "@/*":["*"],
      }
    },
    "include": ["src"],
    "exclude": ["node_modules","dist"]
}